<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CashIQ">
        <activity
            android:name=".UI.activity.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".UI.activity.ExpenseActivity"
            android:exported="true" />
        <activity
            android:name=".UI.activity.IncomeActivity"
            android:exported="false" />
        <activity
            android:name=".UI.activity.DashboardActivity"
            android:exported="true" />
        <activity android:name=".UI.activity.SignUpActivity" />
        <activity
            android:name=".UI.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CashIQ.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.activity.OnboardingActivity"
            android:theme="@style/Theme.CashIQ.NoActionBar" />
        <activity
            android:name=".UI.activity.LoginActivity"
            android:exported="true" />
    </application>

</manifest>